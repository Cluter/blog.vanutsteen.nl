<% breadcrumbs.unshift '<a href="/">Home</a>' -%>
<!DOCTYPE html>
<!--[if IEMobile 7 ]><html class="no-js iem7"><![endif]-->
<!--[if lt IE 9]><html class="no-js lte-ie8"><![endif]-->
<!--[if (gt IE 8)|(gt IEMobile 7)|!(IEMobile)|!(IE)]><!--><html class="no-js" lang="en"><!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
  <meta name="author" content="<%= settings.author %>">

  <!-- {% if page.keywords %}<meta name="keywords" content="{{ page.keywords }}">{% endif %} -->

  <!-- http://t.co/dKP3o1e -->
  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="canonical" href="{{ canonical }}">
  <link href="<%= settings.url %>/favicon.ico" rel="icon">

  <!-- feeds -->
  <link rel="alternate" type="application/atom+xml" href="/atom.xml" title="<%= settings.title %> ATOM Feed">
  <link rel="alternate" type="application/atom+json" href="/atom.json" title="<%= settings.title %> JSON Feed">
  <link rel="alternate" type="application/rss+xml" href="/feed.rss" title="<%= settings.title %> RSS 2.0 Feed">
  <% if current_article %>
  <link rel="alternate" type="application/atom+json" href="<%=current_article.url%>atom.json" title="<%= current_article.title %> ATOM Feed">
  <link rel="alternate" type="application/json" href="<%=current_article.url%>atom.json" title="<%= current_article.title %> JSON Feed">
  <link rel="alternate" type="application/rss+xml" href="<%=current_article.url%>feed.rss" title="<%= current_article.title %> RSS 2.0 Feed">
  <% end %>

  <title><%= current_page.data.title ? "#{current_page.data.title} - #{settings.title} #{settings.subtitle}" : "#{settings.title}" %></title>
  <meta name="description" content="<%= current_page.data.description ? current_page.data.description : settings.description %>" />

  <%= stylesheet_link_tag 'screen.css' %>
	<%= stylesheet_link_tag 'github.css' %>

	<!--Fonts from Google"s Web font directory at http://google.com/webfonts -->
	<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

</head>

  <body>
  	<div class="container">
		  <header role="banner" class="row"><%= partial "partials/header" %></header>
		  <div class="main row">
		  	<%= partial "partials/breadcrumbs" %>
		    <div class="row content">
		      <%= yield %>
          <%= partial "partials/aside" %>
		    </div>
		  </div>
    	<%= partial "partials/footer" %>
    </div>
  </body>
</html>
