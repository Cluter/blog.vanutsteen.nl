<% breadcrumbs.unshift '<a href="/">Home</a>' -%>
<!DOCTYPE html>
<!--[if IEMobile 7 ]><html class="no-js iem7"><![endif]-->
<!--[if lt IE 9]><html class="no-js lte-ie8"><![endif]-->
<!--[if (gt IE 8)|(gt IEMobile 7)|!(IEMobile)|!(IE)]><!--><html class="no-js" lang="en"><!--<![endif]-->
<head>
  <title><%= current_page.data.title ? "#{current_page.data.title} - #{settings.title} #{settings.subtitle}" : "#{settings.title} - #{settings.title} #{settings.subtitle}" %></title>
  
  <meta charset="utf-8">
  <meta name="author" content="<%= settings.author %>">

  <!-- http://t.co/dKP3o1e -->
  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <% if current_page.data['tags'] -%>
  <meta name="keywords" content="<%= current_page.data['tags'].join(', ') %>">
  <% end %>
  <meta name="description" content="<%= yield_content(:meta_description) || settings.description %>" />

  <link href="<%= settings.url %>/favicon.ico" rel="icon">

  <!-- feeds -->
  <link rel="alternate" type="application/atom+xml" href="/atom.xml" title="<%= settings.title %> ATOM Feed">
  <link rel="alternate" type="application/atom+json" href="/atom.json" title="<%= settings.title %> JSON Feed">
  <link rel="alternate" type="application/rss+xml" href="/feed.rss" title="<%= settings.title %> RSS 2.0 Feed">
  <% if current_article %>
  <link rel="alternate" type="application/atom+xml" href="<%=current_article.url%>atom.xml" title="<%= current_article.title %> ATOM Feed">
  <link rel="alternate" type="application/json" href="<%=current_article.url%>atom.json" title="<%= current_article.title %> JSON Feed">
  <% end %>

  <%= stylesheet_link_tag 'screen.css' %>

	<!--Fonts from Google"s Web font directory at http://google.com/webfonts -->
	<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

</head>

  <body>
  	<div class="container">
		  <header role="banner" class="row"><%= partial "partials/header" %></header>
		  <div class="main row">
		  	<%= partial "partials/breadcrumbs" %>
		    <div class="row content">
		      <%= yield %>
        </div>
		  </div>
    </div>
    <%= partial "partials/footer" %>
  </body>

  <script type="text/javascript" src="/javascripts/app.js"></script>
    
  </script>
</html>
