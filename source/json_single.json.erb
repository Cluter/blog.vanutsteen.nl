{
    "feed": {
       "id": "urn:uuid:<%= settings.uuid %>",
        "link": [
            {
                "@attributes": {
                    "href": "<%= settings.url %>/atom.json",
                    "rel": "self"
                }
            },
            {
                "@attributes": {
                    "href": "<%= settings.url %>/"
                }
            }
        ],
        "title"    : "<%= settings.title %>",
        "subtitle" : "<%= settings.subtitle %>",
        "updated"  : "<%= Time.now.strftime('%FT%T%:z') %>",
        "author": {
            "name": "<%= settings.author %>"
        },
        "rights" : "Copyright (c) <%= Date.today.strftime('%Y') %>, <%= settings.author %>",
        "entry": {
            "id"      : "urn:uuid:<%= UUID.create_sha1(settings.url + @atom_article.url, UUID::NameSpace_URL) %>",
            "link"    : "<%= settings.url %><%= @atom_article.url %>",
            "summary" : <%= @atom_article.summary.to_json %>,
            "content" : <%= @atom_article.body.to_json %>,
            "title"   : <%= @atom_article.title.to_json %>,
            "updated" : "<%= @atom_article.date.strftime('%FT%T%:z') %>"
        }
    }
}
